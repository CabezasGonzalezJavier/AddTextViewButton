<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thedeveloperworldisyours.addtextview.MainActivity">

    <ImageView
        android:id="@+id/thedeveloperworldisyours_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/thedeveloperworldisyours" />


    <Button
        android:id="@+id/activity_main_relative_layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thedeveloperworldisyours_image_view"
        android:layout_centerHorizontal="true"
        android:onClick="goToRelativeLayout"
        android:text="@string/activity_main_relative_layout" />

    <Button
        android:id="@+id/activity_main_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_relative_layout_button"
        android:layout_centerHorizontal="true"
        android:onClick="goToLinearLayout"
        android:text="@string/activity_main_linear_layout" />

    <Button
        android:id="@+id/activity_main_custom_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_linear_layout"
        android:layout_centerHorizontal="true"
        android:onClick="goToCustomView"
        android:text="@string/activity_main_custom_view" />
</RelativeLayout>
